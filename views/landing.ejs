<% include partials/header %>

<div class="container" >
  <%if(valid){%>
    <div class="alert alert-success" role="alert">
      This is a valid blockchain
    </div>
  <%} else {%>
    <div class="alert alert-danger" role="alert">
      This is NOT a valid blockchain
    </div>
  <%}%>
  <% blockchain.forEach(function(block){ %>
    <div class="block">
      <h3 class"label"> Index: <%= block.index %> </h1>
      <h5 class"label"> Time Created: <%=  moment(parseInt(block.timestamp)) %> </h5>
      <h5 class"label"> Details:  </h5>
      <ul>
        <li> From: <%= block.data.from %></li>
        <li> To: <%= block.data.to %></li>
        <li> Message: <%= block.data.message %></li>
      </ul>
      <h5 class"label"> Previous Hash: <%= block.prevHash %> </h5>
      <h5 class"label"> Hash: <%= block.hash %> </h5>

    </div>
  <% }); %>


</div>



<% include partials/footer %>
